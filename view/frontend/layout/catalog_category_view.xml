<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock class="Magento\Catalog\Block\Product\ListProduct" name="category.products.list" as="product_list">
                <action method="setDefaultDirection">
                    <argument name="dir" xsi:type="helper" helper="MageSuite\Frontend\Helper\Category\View::getSortDirection"/>
                </action>
            </referenceBlock>
        </referenceContainer>

        <!--Remove old page title and create custom category page title in content.top container inside main column-->
        <referenceBlock name="page.main.title" display="false" />
        <referenceContainer name="content.top">
            <block class="MageSuite\Frontend\Block\Category\View\Headline" name="category.page.headline" template="MageSuite_Frontend::category/headline.phtml">
                <arguments>
                    <argument name="show_collection_size" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
